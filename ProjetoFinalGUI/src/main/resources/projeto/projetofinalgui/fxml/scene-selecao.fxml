                     <children>
                        <Button fx:id="botaoSelecionarBesta" disable="true" mnemonicParsing="false" onAction="#selecionarBesta" text="Selecionar">
                           <HBox.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="botaoRemoverBesta" disable="true" mnemonicParsing="false" onAction="#removerBesta" text="Remover">
                           <HBox.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </HBox.margin>
                        </Button>
                     </children>
