                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <ListView fx:id="listBestasDisponiveis">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </ListView>
                  <ListView fx:id="listBestasSelecionados">
                     <VBox.margin>
                        <Insets top="10.0" />
